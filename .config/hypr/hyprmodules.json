
{
    // Workspaces
    "hyprland/workspaces":{
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons":{
			"urgent": "",
			"active": "",
			"default": ""
       },
        "persistent-workspaces":{
             "*": 5
        }       
    },
    // Taskbar
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 12,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
           "Alacritty"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },

